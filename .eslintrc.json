{
  "$schema": "https://github.com/SchemaStore/schemastore/blob/master/src/schemas/json/eslintrc.json",
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Snap": "readonly",
    "ga": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "ignorePatterns": ["extensions/**", "build/*", "docs/*", "src/**/grammar.js"],
  "rules": {
    "comma-dangle": [
      "error",
      {
        "arrays": "only-multiline",
        "objects": "only-multiline",
        "imports": "only-multiline",
        "exports": "only-multiline",
        "functions": "never"
      }
    ],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}

// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "options": {
        "cwd": "${workspaceFolder}/extensions"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
